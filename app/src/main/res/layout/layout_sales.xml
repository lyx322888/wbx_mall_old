<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <ImageView
        android:id="@+id/user_face"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阿芳卤面"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_grade_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="通用版 "
            android:textColor="#CBCACA"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/user_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="购买时间 2019-03-05 "
            android:textColor="#B7B6B6"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/user_money"
        android:layout_width="95dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_sales_but"
        android:gravity="center"
        android:text="到账￥2080.00"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>

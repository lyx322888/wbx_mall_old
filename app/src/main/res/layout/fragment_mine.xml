                    <com.wbx.mall.widget.CircleImageView
                        android:id="@+id/head_pic_im"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="45dp"
                        android:src="@drawable/loading_logo"
                        app:bor_color="@color/colorWhite"
                        app:bor_width="1dp" />

                    <TextView
                        android:id="@+id/user_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/head_pic_im"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/head_pic_im"
                        android:layout_toRightOf="@+id/head_pic_im"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/rank_name_tv"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.wbx.mall.widget.CircleImageView
            android:id="@+id/iv_user"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:src="@color/app_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微百姓旗舰店"
                android:textColor="#585858"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2018-05-16"
                android:textColor="#A5A5A6"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_enter_shop"
            android:layout_width="53dp"
            android:layout_height="22dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_solid_app_color_2dp"
            android:gravity="center"
            android:text="进店逛逛"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_focus"
            android:layout_width="53dp"
            android:layout_height="22dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_focus"
            android:gravity="center"
            android:text="关注店铺"
            android:textColor="@color/color_focus"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="店铺商铺一律八折优惠"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:src="@drawable/order_address" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="厦门市思明区观音山鸿星尔克大厦"
            android:textColor="#B4B4B4"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2.3km"
            android:textColor="@color/app_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="18dp"
            android:drawableLeft="@drawable/icon_share"
            android:drawablePadding="5dp"
            android:text="分享"
            android:textColor="@color/app_color"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>

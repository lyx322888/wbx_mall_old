<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingVertical="5dp">

    <ImageView
        android:id="@+id/iv_free_shop_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        tools:src="@color/app_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.wbx.mall.widget.CircleImageView
                android:id="@+id/iv_free_people_photo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:src="@color/app_color" />

            <TextView
                android:id="@+id/tv_free_people_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                tools:text="林林林"
                android:textColor="@color/app_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恭喜在本店免单成功 获得"
                android:textColor="#5D5D5D"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_free_goods_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="矿泉水"
                android:textColor="@color/app_color"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
